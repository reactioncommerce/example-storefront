{
  "name": "reaction-next-starterkit",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "keywords": [],
  "author": {
    "name": "Reaction Commerce",
    "email": "engineering@reactioncommerce.com",
    "url": "https://reactioncommerce.com"
  },
  "license": "GPL-3.0",
  "scripts": {
    "dev": "NODE_ENV=development babel-node ./src/server.js",
    "build": "yarn run build-clean && yarn run build-transpile && yarn run build-sync && next build src && mv src/.next build/app",
    "build-transpile": "NODE_ENV=production babel src -d build/app --ignore '**/*.test.js','**/*__mocks__','**/*__snapshots__'",
    "build-sync": "cp -R src/static build/app/static && rsync -av --prune-empty-dirs --include='*/' --include='*.gql' --exclude='*' src/* build/app",
    "build-clean": "rimraf build/app",
    "build-next": "yarn install --save-dev && next build src",
    "lint": "eslint .",
    "start": "NODE_ENV=production node build/app/server.js",
    "test": "yarn run test:unit",
    "test:ci": "yarn run test:unit --ci --runInBand --colors",
    "test:unit": "NODE_ENV=jesttest jest",
    "test:unit:watch": "NODE_ENV=jesttest jest --watch"
  },
  "eslintConfig": {
    "extends": [
      "@reactioncommerce"
    ]
  },
  "dependencies": {
    "@material-ui/core": "^1.0.0",
    "@segment/snippet": "^4.3.1",
    "apollo-cache-inmemory": "^1.1.11",
    "apollo-client": "^2.2.7",
    "apollo-link": "^1.2.2",
    "apollo-link-error": "^1.0.9",
    "apollo-link-http": "^1.5.4",
    "body-parser": "^1.18.2",
    "chalk": "^2.3.2",
    "classnames": "^2.2.5",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.8.0",
    "isomorphic-fetch": "^2.2.1",
    "js-cookie": "^2.2.0",
    "keymirror": "^0.1.1",
    "mdi-material-ui": "^5.1.0",
    "mobx": "^4.1.1",
    "mobx-react": "^5.0.0",
    "next": "^6.0.3",
    "next-page-transitions": "^1.0.0-alpha.4",
    "next-routes": "^1.4.2",
    "passport": "^0.4.0",
    "passport-cookie": "^1.0.6",
    "prop-types": "^15.6.1",
    "react": "16.4.0",
    "react-apollo": "^2.1.3",
    "react-dom": "16.4.0",
    "react-helmet": "^5.2.0",
    "react-tracking": "^5.2.1"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.42",
    "@babel/core": "7.0.0-beta.42",
    "@babel/node": "7.0.0-beta.42",
    "@babel/plugin-proposal-class-properties": "7.0.0-beta.42",
    "@babel/plugin-proposal-decorators": "7.0.0-beta.42",
    "@babel/preset-env": "7.0.0-beta.42",
    "@babel/preset-stage-2": "7.0.0-beta.42",
    "@reactioncommerce/eslint-config": "^1.7.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.3",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jest": "^21.15.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^22.4.3",
    "jest-junit": "^3.6.0",
    "jest-transform-graphql": "2.1.0",
    "react-test-renderer": "^16.3.1",
    "rimraf": "^2.6.2",
    "snyk": "^1.73.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/reports/**",
      "!**/dist/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageDirectory": "reports/coverage",
    "testResultsProcessor": "jest-junit",
    "roots": [
      "./src"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.js",
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      ".*": "babel-jest"
    }
  },
  "jest-junit": {
    "output": "reports/junit/junit.xml",
    "suiteName": "jest-tests"
  }
}
